{
  "info": {
    "name": "Blockchain SDK API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "API for interacting with Ethereum and Tron blockchains"
  },
  "item": [
    {
      "name": "Ethereum Connect",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{base_url}}/api/v1/eth/connect", "host": ["{{base_url}}"], "path": ["api", "v1", "eth", "connect"] },
        "body": { "mode": "raw", "raw": "{\n  \"url\": \"{{node_url}}\"\n}" }
      }
    },
    {
      "name": "Ethereum Generate Wallet",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{base_url}}/api/v1/eth/wallet/generate", "host": ["{{base_url}}"], "path": ["api", "v1", "eth", "wallet", "generate"] }
      }
    },
    {
      "name": "Ethereum Get Balance",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{base_url}}/api/v1/eth/balance", "host": ["{{base_url}}"], "path": ["api", "v1", "eth", "balance"] },
        "body": { "mode": "raw", "raw": "{\n  \"address\": \"<ADDRESS>\"\n}" }
      }
    },
    {
      "name": "Ethereum Send Native Token",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{base_url}}/api/v1/eth/transfer/native", "host": ["{{base_url}}"], "path": ["api", "v1", "eth", "transfer", "native"] },
        "body": { "mode": "raw", "raw": "{\n  \"from_private_key\": \"<PRIVATE_KEY>\",\n  \"to_address\": \"<TO_ADDRESS>\",\n  \"amount\": 0.01\n}" }
      }
    },
    {
      "name": "Ethereum Deploy Contract",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{base_url}}/api/v1/eth/contract/deploy", "host": ["{{base_url}}"], "path": ["api", "v1", "eth", "contract", "deploy"] },
        "body": { "mode": "raw", "raw": "{\n  \"private_key\": \"<PRIVATE_KEY>\",\n  \"bytecode\": \"<BYTECODE>\",\n  \"abi\": \"<ABI>\",\n  \"constructor_args\": []\n}" }
      }
    },
    {
      "name": "Tron Connect",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
