      }
    },
    {
      "name": "Tron Generate Wallet",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{base_url}}/api/v1/tron/wallet/generate", "host": ["{{base_url}}"], "path": ["api", "v1", "tron", "wallet", "generate"] }
      }
    },
    {
      "name": "Tron Get Balance",
      "request": {
        "method": "POST",
